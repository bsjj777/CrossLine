<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.green.team4.service.sw.DeleteMemMapper">

    <!-- tbl_deleteMem 데이터 등록 -->
    <insert id="insert">
        insert into tbl_deleteMem (id, password, name, nickName, email, phoneNum, gender, SSNum,
                                   postcode, address, detailAddress, auth, grade,
                                   delDate, delCategory, delContent)
            values (#{id}, #{password}, #{name}, #{nickName},
                    #{email}, #{phoneNum}, #{gender}, #{SSNum}, #{postcode},
                    #{address},#{detailAddress},#{auth},#{grade},#{delDate},
                    #{delCategory},#{delContent})
    </insert>

    <!-- tbl_deleteMem 데이터 전체 가져오기 -->
    <select id="getAll" resultType="com.green.team4.vo.sw.DeleteMemVO">
        select * from tbl_deleteMem
    </select>

    <!-- tbl_deleteMem 데이터 하나 가져오기 -->
    <select id="getOne" resultType="com.green.team4.vo.sw.DeleteMemVO">
        select * from tbl_deleteMem where delNo=#{delNo}
    </select>

    <!-- tbl_deleteMem 데이터 삭제 -->
    <delete id="delete">
        delete from tbl_deleteMem where delNo=#{delNo}
    </delete>

</mapper>